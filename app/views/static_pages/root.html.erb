<% if logged_in? %>
  <script type="text/javascript">
    window.currentUser = <%= render(
      "api/users/user.json.jbuilder",
      user: current_user
    ).html_safe %>
  </script>
<% end %>

<% if logged_vendor_in? %>
  <script type="text/javascript">
    window.currentVendor = <%= render(
      "api/vendor/vendor.json.jbuilder",
      vendor: current_vendor
    ).html_safe %>
  </script>
<% end %>

<main id="root"></main>